<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'on' if test_button.state == "normal" else "off"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.pressed()

    DPEAButton:
        id: btn_2
        text: "this text will change on press"
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.pressed2()

    DPEAButton:
        id: btn_3
        text: "Button"
        size: 100, 100
        x: root.width * 0.45
        y: root.height * 0.25
        color: 1, 0.5, 0.5, 1
        on_press: root.pressed3()

    DPEAButton:
        id: btn_4
        text: "Stepper Bttn"
        size: 100, 100
        x: root.width * 0.53
        y: root.height * 0.45
        color: 1, 0.75, 0.55, 0.9
        on_press: root.pressed4()

    DPEAButton:
        id: btn_5
        text: "Control Bttn"
        size: 100, 100
        x: root.width * 0.28
        y: root.height * 0.25
        color: 1, 0.75, 0.75, 0.9
        on_press: root.pressed5()

    DPEAButton:
        id: btn_6
        text: "The Big One"
        size: 100, 100
        x: root.width * 0.48
        y: root.height * 0.65
        color: 1, 0.9, 0.5, 0.9
        on_press: root.pressed6()

    Label:
        id: proj_label
        size_hint: 0.5, 0.5
        font_size: 40
        x: root.width * 0.5
        y: root.height * 0.1
        color: 0, 0.5, 0, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0
        text: "motor on"

    Label:
        id: proj_label2
        size_hint: 0.5, 0.5
        font_size: 40
        x: root.width * 0
        y: root.height * 0.1
        color: 0, 0.5, 0, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 1, 0
        text: str(proj_slider.value)
    Label:
        id: labl
        size_hint: 0.5, 0.5
        font_size: 40
        x: root.width * 0.2
        y: root.height * 0.1
        color: 0.35, 0.5, 0, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0.5, 1, 0.5
        text:

    ImageButton:
        id: img_btn
        source: "path_to_image"
        center_x: root.width * 0
        center_y: root.height * 0
        color: 0.1, 0.3, 0.5, 1
        on_press: root.transition_forth()

    ImageButton:
        id: img_btn2
        source: "path_to_image"
        center_x: root.width * 1
        center_y: root.height * 1
        color: 0.1, 0.3, 0.5, 1
        on_press: root.transition_forth2()

    Slider:
        id: proj_slider
        size_hint: 0.5, 0.5
        x: root.width * 0.3
        y: root.height * 0.7
        color: 0, 0.5, 1, 1
        min: 200
        max: 500
        step: 100
        on_touch_up: root.sliding()




    SelfUpdatingLabel:
        id: time_label
        size_hint: None, None
        font_size: 30
        update_property: time.now
        update_property_parameters: None
        center_x: root.width * 0.5
        center_y: root.height * 0.45
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

